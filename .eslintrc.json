{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"]
    },
    "overrides": [
        {
            "files": ["*.js", "*.mjs"],
            "parserOptions": {
                "sourceType": "module"
            }
        }
    ]
}
